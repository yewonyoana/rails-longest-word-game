<div class="container mt-5">
  <h1>New Game</h1>
  <div class="d-inline-flex p-2">
    <% @letters.each do |letter| %>
      <div class="border border-warning rounded p-3 m-1 text-center" style='width: 3rem'"><%= letter %></div>
    <% end %>
  </div>

  <form action="/score" method="post" data-turbo="false" class="row g-2 mt-3">
    <label for="word" class="mb-3">What is the longest word you can find?</label>
    <div class="col-auto">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
      <input type="text" name="word" id="word" class="form-control">
    </div>
    <div class="col-auto">
      <input type="submit" value="Play" class="btn btn-warning">
    </div>
  </form>
</div>
